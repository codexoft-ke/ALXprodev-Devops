#!/bin/bash
# Script to fetch data for multiple Pokémon and save to separate files

POKEMON_LIST=(bulbasaur ivysaur venusaur charmander charmeleon)
DATA_DIR="pokemon_data"
API_URL="https://pokeapi.co/api/v2/pokemon"

mkdir -p "$DATA_DIR"

done
ERROR_LOG="errors.txt"
> "$ERROR_LOG"

for pokemon in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $pokemon..."
    success=0
    for attempt in {1..3}; do
        curl -s -f "$API_URL/$pokemon" -o "$DATA_DIR/$pokemon.json"
        if [ $? -eq 0 ]; then
            echo "Saved data to $DATA_DIR/$pokemon.json ✅"
            success=1
            break
        else
            echo "Attempt $attempt failed for $pokemon." >> "$ERROR_LOG"
            sleep 2 # Delay between retries
        fi
    done
    if [ $success -eq 0 ]; then
        echo "Failed to fetch data for $pokemon after 3 attempts. Skipping." | tee -a "$ERROR_LOG"
    fi
    sleep 2 # Delay to avoid rate-limiting between Pokémon
done
