#!/bin/bash
# Script to fetch Pikachu data from the PokÃ©mon API and save to data.json
# Logs errors to errors.txt if the request fails

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

curl -s -f "$API_URL" -o "$OUTPUT_FILE" 2> "$ERROR_FILE"

if [ $? -ne 0 ]; then
    echo "API request failed. See $ERROR_FILE for details." >> "$ERROR_FILE"
    exit 1
fi
